{% import "_includes/forms" as forms %}

<div id="tab-campaign-info" class="tab-content">
    {{ forms.textField({
        id: 'fromName',
        name: 'defaultmailer[fromName]',
        label: 'From Name'|t('sprout-email'),
        autofocus: true,
        required: true,
        instructions: 'The default “From” name Sprout Email will use when creating a
    notification.'|t('sprout-email'),
        value: settings.fromName is defined ? settings.fromName : null,
        errors: settings.getErrors('fromName') is defined ?
        settings.getErrors('fromName') : null
    }) }}

    {{ forms.textField({
        id: 'fromEmail',
        name: 'defaultmailer[fromEmail]',
        label: 'From Email'|t('sprout-email'),
        required: true,
        instructions: 'The default email address Sprout Email will use when creating
    a notification.'|t('sprout-email'),
        value: settings.fromEmail is defined ? settings.fromEmail : null,
        errors: settings.getErrors('fromEmail') is defined ?
        settings.getErrors('fromEmail') : null
    }) }}

    {{ forms.textField({
        id: 'replyToEmail',
        name: 'defaultmailer[replyToEmail]',
        label: 'Reply To'|t('sprout-email'),
        instructions: 'The default “Reply To” email address Sprout Email will use
    when creating a notification.'|t('sprout-email'),
        value: settings.replyToEmail is defined ? settings.replyToEmail : null,
        errors: settings.getErrors('replyToEmail') is defined ?
        settings.getErrors('replyToEmail') : null
    }) }}

</div>


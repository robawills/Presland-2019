{% extends "sprout-base-import/_layouts/base" %}
{% import "_includes/forms" as forms %}

{% set title = 'Bundles'|t('sprout-base-import') %}

{% block content %}
    {% include 'sprout-base-import/bundles/bundle-cards' %}
{% endblock %}

{% block details %}

    <div class="meta">

        <h2>{{ "Bundles"|t('sprout-base-import') }}
            <sup>{{ "beta"|t('sprout-base-import') }}</sup></h2>

        <p>{{ 'Bundles allow you to reuse content architecture and templates.'|t('sprout-base-import') }}</p>

        <h6>{{ "Schema"|t }}</h6>
        <p>{{ 'Schema are defined in Craft import JSON format. See the documentation for supported Elements and Settings and import behavior.'|t('sprout-base-import') }}</p>

        <h6>{{ "Templates"|t }}</h6>
        <p>{{ 'Templates are defined in Bundle integration and can be any number of nested folders and templates. Your Bundle /templates folder will be copied to your Craft /templates folder and overwrite any existing templates of the same name.'|t('sprout-base-import') }}</p>

        <br>
        <hr>

        <h6>{{ "Getting Started"|t }}</h6>

        <p>{{ "See working Bundles in the following Sprout plugins:"|t('sprout-base-import') }}</p>

        <ul class="bullets">
            <li>Sprout Forms</li>
            <li>Sprout Import</li>
            <li>Sprout Reports</li>
        </ul>

    </div>

{% endblock %}

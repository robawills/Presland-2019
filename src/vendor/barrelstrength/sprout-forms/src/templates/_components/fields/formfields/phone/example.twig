{% import "_includes/forms" as forms %}

{% set options = field.getCountries() %}

{{ forms.select({
    options: options,
    value: field.country,
    readonly: true,
    disabled: true
}) }}

{{ forms.text({
    class: 'sproutfields-phone-example',
    placeholder: field.placeholder,
    readonly: true,
    disabled: true
}) }}

{% css %}
    input.sproutfields-phone-example {
        width: 40% !important;
    }
{% endcss %}
{% import "_includes/forms" as forms %}

{{ forms.textareaField({
    label: 'Field Format'|t('sprout-fields'),
    name: 'fieldFormat',
    instructions: 'What the auto-generated field value should look like. You can include tags that output element properties, such as {myCustomField}.'|t('sprout-fields'),
    placeholder: '{title} OR {{ object.title }}',
    value: field.fieldFormat,
    rows: 10,
    class: 'code'
}) }}

{{ forms.lightswitchField({
    label: "Show Field"|t,
    instructions: "Display this field in the Field Layout. The field value will still be available in your templates."|t,
    id: 'showField',
    name: 'showField',
    on: field.showField,
    toggle: 'sproutfields-predefined-display-settings'
}) }}

<div id="sproutfields-predefined-display-settings" {% if not field.showField %}class="hidden"{% endif %}>

    {{ forms.lightswitchField({
        label: "Output as Textarea"|t,
        instructions: 'By default, the Predefined field will display as a single line text field. Enable this setting to display it as a textarea field.'|t,
        id: 'outputTextarea',
        name: 'outputTextarea',
        on: field.outputTextarea,
    }) }}

</div>


{% import "_includes/forms" as forms %}

{# Form Input Macros #}

{% macro address(config) %}
    {% include 'sprout-base-fields/_components/fields/formfields/address/input' with config %}
{% endmacro %}

{% macro email(config) %}
    {% include 'sprout-base-fields/_components/fields/formfields/email/input' with config %}
{% endmacro %}

{% macro emailSelect(config) %}
    {% include 'sprout-base-fields/_components/fields/formfields/emailselect/input' with config %}
{% endmacro %}

{% macro hidden(config) %}
    {% include 'sprout-base-fields/_components/fields/formfields/hidden/input' with config %}
{% endmacro %}

{% macro invisible(config) %}
    {% include 'sprout-base-fields/_components/fields/formfields/invisible/input' with config %}
{% endmacro %}

{% macro notes(config) %}
    {% include 'sprout-base-fields/_components/fields/formfields/notes/input' with config %}
{% endmacro %}

{% macro phone(config) %}
    {% include 'sprout-base-fields/_components/fields/formfields/phone/input' with config %}
{% endmacro %}

{% macro regularExpression(config) %}
    {% include 'sprout-base-fields/_components/fields/formfields/regularexpressio/input' with config %}
{% endmacro %}

{% macro selectOther(config) -%}
    {% include 'sprout-base-fields/_components/fields/formfields/selectother/input' with config only %}
{%- endmacro %}

{% macro url(config) %}
    {% include 'sprout-base-fields/_components/fields/formfields/url/input' with config %}
{% endmacro %}

{# Form Field Macros #}

{% macro emailField(config) %}
    {% import "_includes/forms" as forms %}
    {% import _self as sproutFields %}
    {{ forms.field(config, sproutFields.email(config)) }}
{% endmacro %}

{% macro phoneField(config) %}
    {% import "_includes/forms" as forms %}
    {% import _self as sproutFields %}
    {{ forms.field(config, sproutFields.phone(config)) }}
{% endmacro %}

{% macro urlField(config) %}
    {% import "_includes/forms" as forms %}
    {% import _self as sproutFields %}
    {{ forms.field(config, sproutFields.url(config)) }}
{% endmacro %}